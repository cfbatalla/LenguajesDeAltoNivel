<%- include("../header"); %>
<div class="col-12">
    <h1>Agregar usuario</h1>
    <form method="post" action="/usuarios/insertar">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input required id="nombre" placeholder="Nombre del usuario" class="form-control" type="text"
                name="firstname">
        </div>
        <div class="form-group">
            <label for="precio">Precio</label>
            <input required id="precio" placeholder="apellido del usuario" class="form-control" type="number"
                name="lastname">
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/usuarios" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>